{{>layout/header}}
<div class="main-container">
    <div class="main-wrap" style="display: flex;align-items: center;flex-direction: column;">
        <header>
        <div class="logo-wrap">
            <h2>회원가입</h2>
        </div>
        </header>
        <div class="join_wrap" style="display: flex;flex-direction: column;width: 530px;padding-top: 50px;">
            <form action="/join" method="post">
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">아이디</label>
                    <div class="col-sm-10">
                        <input type="id" class="form-control" id="inputEmail3" name="id">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputPassword3" class="col-sm-2 col-form-label">비밀번호</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="inputPassword3" name="password">
                    </div>
                </div>
                <fieldset class="row mb-3">
                    <legend class="col-form-label col-sm-2 pt-0">성별</legend>
                    <div class="col-sm-10">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gender" id="gridRadios1" value="m" checked>
                            <label class="form-check-label" for="gridRadios1">
                                남성
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gender" id="gridRadios2" value="w">
                            <label class="form-check-label" for="gridRadios2">
                                여성
                            </label>
                        </div>
                    </div>
                </fieldset>
                <div class="row mb-3">
                    <div class="col-sm-10 offset-sm-2">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="gridCheck1">
                            <label class="form-check-label" for="gridCheck1">
                                개인정보 수집에 동의합니다.
                            </label>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary" style="margin-left: 420px;">회원가입</button>
            </form>
        </div>
    </div>
</div>
{{>layout/footer}}